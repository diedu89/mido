	</head>
  <body>

    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <%= link_to "Mido Contacts", root_path, class: "navbar-brand" %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-9 col-lg-offset-1">
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; Mido 2014</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
